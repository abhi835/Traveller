<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <!--on below line we are creating
        a linear layout for grid view item-->

        <!--on below line we are creating
             a simple image view-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/CityPlacesImage"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CityPlacesRating"
            android:layout_width="@dimen/_38mdp"
            android:layout_height="@dimen/_23mdp"
            android:background="@color/white"
            android:backgroundTint="#32CD38"
            android:text="4.5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/CityPlacesTitle"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/CityPlacesTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:textAlignment="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="@dimen/_18mdp"
            android:textColor="@color/white"
            android:background="#FFEB3B"
            android:textAppearance="@dimen/_12mdp"
            app:layout_constraintEnd_toEndOf="@+id/CityPlacesImage"
            app:layout_constraintHorizontal_bias="0.611"
            app:layout_constraintStart_toStartOf="@+id/CityPlacesImage"
            app:layout_constraintBottom_toBottomOf="@+id/CityPlacesImage"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>