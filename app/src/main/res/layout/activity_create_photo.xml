<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context=".createPhotoActivity">

    <TextView
        android:id="@+id/tet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Your Photo"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_35mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/imageET"
        app:layout_constraintTop_toBottomOf="@+id/tet" />

    <Button
        android:id="@+id/post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Post"
        android:textColor="@color/white"
        android:textStyle="bold|normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageET" />

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:text="Choose"
        android:textColor="@color/white"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageET" />



        <!--Picked images will be shown here-->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2mdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_7mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose" />
        <ImageSwitcher
            android:id="@+id/imageSwitcher"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/view"/>
        <!--Show previous image in ImageSwitcher clicking this button-->
    <Button
        android:id="@+id/previousBtn"
        android:visibility="gone"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSwitcher" />
        <!--Show next image in ImageSwitcher clicking this button-->
        <Button
            android:id="@+id/nextBtn"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         app:layout_constraintStart_toEndOf="@+id/previousBtn"
            app:layout_constraintTop_toBottomOf="@+id/imageSwitcher"
            android:layout_alignParentEnd="true"
            android:text="Next" />
        <!--Pick images clicking this button-->
        <Button
            android:id="@+id/pickImagesBtn"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toEndOf="@+id/nextBtn"
            app:layout_constraintTop_toBottomOf="@+id/imageSwitcher"
            android:text="Pick Images" />




</androidx.constraintlayout.widget.ConstraintLayout>