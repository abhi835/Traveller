        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/placephotos"
            android:layout_width="@dimen/_277mdp"
            android:layout_height="@dimen/_350mdp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:iss_auto_cycle="true"
            app:iss_period="3500"
            app:iss_delay="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8mdp"
            android:text="xxxxx"
            android:textAlignment="gravity"
            android:textColor="@color/color"
            android:textSize="@dimen/_18mdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placephotos" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8mdp"
            android:layout_marginBottom="@dimen/_4mdp"
            android:textSize="@dimen/_20mdp"

            android:text="0.0"
            android:textAlignment="center"
            android:textColor="@color/color"
            android:textStyle="normal"
            app:layout_constraintTop_toBottomOf="@+id/placename"
            app:layout_constraintStart_toStartOf="@+id/placename"
            />

        <RatingBar
            android:id="@+id/simpleRatingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_7mdp"
            android:background="@color/backgroundcolor"
            android:isIndicator="true"
            android:progressTint="#FFD700"
            android:rating="0"
            app:layout_constraintStart_toEndOf="@+id/rating"
            app:layout_constraintTop_toTopOf="@+id/rating" />

        <TextView
            android:id="@+id/ratingnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/simpleRatingBar"
            app:layout_constraintEnd_toEndOf="@id/simpleRatingBar"
            app:layout_constraintStart_toStartOf="@id/simpleRatingBar"
            android:text="(000)"/>

