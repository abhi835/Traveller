        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_value"
            android:textColor="@color/color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="@dimen/_8mdp"
            app:layout_constraintStart_toStartOf="@+id/rating"
            app:layout_constraintTop_toBottomOf="@+id/ratingnumber" />


        <Button
            android:id="@+id/userphotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="User Photos"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_20mdp"
            app:layout_constraintTop_toBottomOf="@id/usersreview"

            android:textColor="@color/white"
            android:textSize="@dimen/_20mdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="531dp" />

        <Button
            android:id="@+id/howtogo"
            android:layout_width="@dimen/_100mdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/transport"
            android:maxLines="2"
            android:layout_marginTop="@dimen/_9font_mdp"
            android:text="How to go there!"
           app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <Button
            android:id="@+id/usersreview"
            android:layout_width="@dimen/_120mdp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/arrowright"
            android:text="User's Review"
            android:maxLines="2"
            android:layout_marginTop="@dimen/_9font_mdp"
           android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="@dimen/_15mdp"
            android:textStyle="bold"
           app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50mdp"
            app:layout_constraintTop_toBottomOf="@id/userphotos"/>

